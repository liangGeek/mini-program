.movie {
  display: flex;
  padding: 10px;
  border-bottom: 1px solid #ccc;
  height: 300rpx;
}
.movie-img {
  width: 200rpx;
  height: 100%;
  margin-right: 10px;
}
.movie-info {
  flex: 1;
}
.movie-title {
  color: #666;
  font-size: 35rpx;
  font-weight: bolder;
}
.movie-rate {
  color: #faaf00;
}