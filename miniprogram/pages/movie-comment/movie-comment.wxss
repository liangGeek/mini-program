.score {
  text-align: center;
  padding: 10px 0;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}
.score-text {
  margin: 10px 0;
  font-size: 12px;
  color: #666;
}
.comment {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.images {
  display: flex;
}
.image {
  width: 150rpx;
  height: 150rpx;
  padding: 5px;
  box-sizing: border-box;
  position: relative;
}
.add {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  font-size: 28px;
  border: 1px solid #ccc;
  border-radius: 3px;
  color: #666;
}
image {
  width: 100%;
  height: 100%;
  border: 1px solid #ccc;
  border-radius: 3px;
}
icon {
  position: absolute;
  right: 0;
  top: 0;
}