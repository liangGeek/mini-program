.container {
  height: 400rpx;
  filter: blur(40rpx);
  opacity: .4px;
}
.mask {
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}
.movie {
  display: flex;
  position: absolute;
  height: 400rpx;
  padding: 10px;
  width: 100%;
  top: 0;
  left: 0;
  box-sizing: border-box;
  color: #fff;
  font-size: 12px;
}
.info-img {
  width: 250rpx;
  height: 100%;
  margin-right: 10px;
}

.detail {
  padding: 10px;
  color: #333;
  word-break: break-all;
}
.title {
  font-weight: bolder;
  font-size: 16px;
}
.original_title {
  font-size: 14px;
  word-break: break-all;
  margin: 5px 0;
}
.rate {
  color: #faaf00;
  font-size: 16px;
  font-weight: bolder;
}
.pubdate {
  font-size: 14px;
  margin: 5px 0;
}
.comment {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}